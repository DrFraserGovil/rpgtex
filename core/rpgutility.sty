%Pluralises words based on the tokens
\NewDocumentCommand{\RpgPlural}{o m m }
{
	% #1: override plural (replaces +s) #2 count #3 word/phrase to be checked
	\int_compare:nTF {#2  = 1 }
	{
		1~#3
	}
	{
		\IfNoValueTF{#1}
		{
			#2~#3s
		}
		{
			#2~#1
		}
	}
}

