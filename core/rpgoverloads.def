
%%Defines a wrapper function which checks if rpgOverloadFile exists, and if it does
\ExplSyntaxOn

% Define the internal worker function
\cs_new_protected:Npn \__rpg_load_overload_file:
  {
    % 1. Check if the theme has defined the file command.
    % We use \cs_if_exist:NF to check if \rpgOverloadFile exists.
    \cs_if_exist:NT \rpg@ThemeFiles
      {


    % 2. Extract the file name from the standard LaTeX command.
    % \tl_set:Nx uses x-expansion to get the content of \rpgOverloadFile
    \tl_set:Nx \l_tmpa_tl { \rpg@ThemeFiles }

    % 3. Check if the extracted file name is empty (theme defined it as empty).
    \tl_if_empty:NF \l_tmpa_tl
      {
        % The file path is valid, so input the file.
        \input { \tl_use:N \l_tmpa_tl }
      }
	  }
  }
\__rpg_load_overload_file:
\ExplSyntaxOff
