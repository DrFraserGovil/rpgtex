%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Environment for tips.
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Standard for every tip



\DeclareTColorBox {__rpg_tip} {o}
  {
	rpg tip,
    #1,
  }

% Extra key for controlling the color of the title and the background
\keys_define:nn { rpg / tip }
  {
    color .tl_set:N         = \l__rpg_tip_color_tl,
    color .initial:n        = tipcolor,
    color .value_required:n = true,
  }

% This function, through its variant, forces the expansion of the tcb keys
% passed to the environment by the user before it invokes the tcolorbox
\cs_new_protected:Nn \__rpg_start_tip:nn
  {
    \begin {__rpg_tip} [ #1, #2 ]
  }

\cs_generate_variant:Nn \__rpg_start_tip:nn { nV }

% The RpgTip environment
% #1 - keys. We handle the custom color key before passing other keys on
% #2 - title.
\NewDocumentEnvironment {RpgTip} { o m }
  {
    \group_begin:
    \keys_set_known:nnN { rpg / tip } {#1} \l_tmpa_tl

    \str_if_eq:VnT \l_tmpa_tl { -NoValue- }
      { \tl_set_eq:NN \l_tmpa_tl \c_empty_tl }

    \__rpg_start_tip:nV
      {
          colback      = \l__rpg_tip_color_tl,
          colbacktitle = \l__rpg_tip_color_tl,
          title        = {#2},
      }
      { \l_tmpa_tl }
  }
  {
    \end {__rpg_tip}
    \group_end:
  }
