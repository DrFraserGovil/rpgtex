\ExplSyntaxOn

  % Set spacing around floats
  \setlength{\textfloatsep}{11pt plus 4pt minus 4pt}
  \setlength{\intextsep}{11pt plus 4pt minus 4pt}
  \setlength{\dbltextfloatsep}{11pt plus 4pt minus 4pt}

  % Remove Numbering (If you want Numbering set secnumdepth to the appropriate depth)
  \setcounter{secnumdepth}{0}


	\let\Chaptermark\chaptermark
	\def\chaptermark#1{\def\__ChapterName{#1}\Chaptermark{#1}}
	\let\Sectionmark\sectionmark
	\def\sectionmark#1{\def\__SectionName{#1}\Sectionmark{#1}}
	\let\Subsectionmark\subsectionmark
	\def\subsectionmark#1{\def\__SubsectionName{#1}\Subsectionmark{#1}}
	\let\Subsubsectionmark\subsubsectionmark
	\def\subsubsectionmark#1{\def\__SubsubsectionName{#1}\Subsubsectionmark{#1}}
	
	\msg_new:nnn{rpg}{bad-section}{#1~is~not~a~valid~name~for~\RpgGetName}
	\NewDocumentCommand{\RpgGetName}{m}
	{
		\str_case:enF{#1}
		{
			{chapter} {\__ChapterName}
			{section} {\__SectionName}
			{subsection} {\__SubsectionName}
			{subsubsection} {\__SubsubsectionName}
		}
		{
			\msg_error:nnn{rpg}{bad-section}{#1}
		}
	}
	
	\NewDocumentCommand\RpgFakeChapter{m}
	{
		\phantomsection
		\addcontentsline{toc}{chapter}{#1}
		\chaptermark{#1}
	}



