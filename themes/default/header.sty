%% Writes chapter name on footer when configured
	\cs_if_free:NF \chaptermark
	{
		\renewcommand*{\chaptermark}[1]
		{
			\markboth
			{
				\MakeUppercase
				{
					\ifnum\value{secnumdepth}>-1
					\chaptertitlename\ \thechapter :~
					\fi
					#1
				}
			}
			{}
		}
	}




% Left-even page footer
\fancyfoot[LE]{%
    \RpgFontFooter \leftmark \newline
    {\RpgFontPageNumber \thepage};
  }

% Right-odd page footer
\fancyfoot[RO]{%
   \RpgFontFooter \leftmark \newline
    {\RpgFontPageNumber \thepage};
  }

  % Clear the current definition of 'plain' footers/headers
\fancypagestyle{plain}{}

% REDEFINE 'plain' to only contain the header logic
\fancypagestyle{empty}{
    % Clear all headers and footers *for this style* first
    \fancyhf{}

    % Ensure footers are explicitly empty for this style
    \fancyfoot{}
}
