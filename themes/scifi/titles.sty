
\ExplSyntaxOff

\renewcommand{\thepart}{\arabic{part}}
\titlecontents{part}
    [0pt] % left
    { \addvspace{.3cm} \titleline{ \color{black} \titlerule[1pt] } \addvspace{.1cm }  \RpgFontTocPart \centering } % above-code
    {Part\ \thecontentslabel\\} % numbered-entry-format
    {\centering} % numberless-entry-format
    {} % filler-page-format
    [  \addvspace{.1cm } \titleline{ \color{black} \titlerule[1pt] } ] % below-code




\RpgSetPartPage
{
    % Add a semi-transparent black overlay for text visibility
	\fill [white, opacity=0.3] ($(current  page.center)+(-4cm,-4cm)$) rectangle ($(current  page.center)+(4cm,4cm)$) ;

	\node at ($(current  page.center)+(0,1)$) {
		\RpgContour[outer=white!50!titleblue,inner=titleblue,style=\RpgFontPart{}]
		{
			\MakeUppercase{Part    \thepart}
		}};
	
	\node at ($(current  page.center)+(0,-1)$) {\parbox[c]{6cm}{\centering
		\RpgContour[outer=white!50!titleblue,inner=titleblue,style=\RpgFontPart\Huge]{{#1}}}};
}

\RpgSetTitleCover
{
	\node[text width=0.8\paperwidth, anchor=north] at ($(current page.north)+(0,-3cm)$) {\begin{center}\RpgContour[outer=titleblue,inner=white,style=
	\RpgFontTitle]{\@title}\end{center}};

	\node[anchor=south] at ($(current page.south)+(0,+3cm)$) {\parbox[t]{0.9\paperwidth}{
		\begin{center}
			
			{\RpgContour[outer=white,inner=titleblue!90!white,style=\RpgFontSubTitle]{\@subtitle}}

			\vspace{1cm}

			{\RpgContour[outer=white,inner=titleblue!90!white,style=\RpgFontSubTitle]{\@author}}
		\end{center}
	}};
}

